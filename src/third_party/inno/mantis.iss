#define MyAppName "Mantis"
#define MyAppVersion "1.007"
#define MyAppVersionStr "1007"
#define MyAppPublisher "Iowa State University"
#define MyAppURL "http://www.iastate.edu/"
#define MyAppExeName "mantis.exe"

#define BIN "D:\dev\mantis_dev\mantis\src\mantis_Qt481_release\release"
#define QTBIN "C:\QtSDK\Desktop\Qt\4.8.1\msvc2008\bin"
#define QWTBIN "D:\dev\mantis_dev\qwt_Qt481_Release\lib"
#define OUTDIR "D:\dev\mantis_dev\releases"

[Setup]
; NOTE: The value of AppId uniquely identifies this application.
; Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{F115853D-876F-408B-B06B-7E37E002941E}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName={pf}\{#MyAppName}
DefaultGroupName={#MyAppName}
OutputDir={#OUTDIR}
OutputBaseFilename={#MyAppName}_{#MyAppVersionStr}
Compression=lzma
SolidCompression=yes

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"

[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "{#BIN}\mantis.exe"; DestDir: "{app}\bin"; Flags: overwritereadonly ignoreversion
Source: "{#QWTBIN}\qwt.dll"; DestDir: "{app}\bin"; Flags: overwritereadonly ignoreversion
Source: "{#QWTBIN}\qwtmathml.dll"; DestDir: "{app}\bin"; Flags: overwritereadonly ignoreversion
Source: "{#QTBIN}\QtCore4.dll"; DestDir: "{app}\bin"; Flags: overwritereadonly ignoreversion
